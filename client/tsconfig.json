{
  "compilerOptions": {
    "noEmitOnError": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "rootDir": "./src",
    "outDir": "./public/javascript",
    "strict": true,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "baseUrl": "./src",
    "module": "nodenext",
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
  "paths": {
    "#root/*": ["*"],
  }
  },
}