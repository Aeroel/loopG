{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "module": "nodenext",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
  "paths": {
    "#root/*": ["./*"],
  }
  },
  "include": ["./"]
}